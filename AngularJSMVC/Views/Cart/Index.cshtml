<!DOCTYPE html>

<html ng-app="AwesomeAngularMVCApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>angular</title>
    @Styles.Render("~/Content/css")
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"></script>
    @Scripts.Render("~/bundles/AwesomeAngularMVCApp")
</head>
<body>
    <div ng-controller="ShoppingCartController">
        <ol>
            <h4>Product List</h4>
            <li class="tableRow">
                <div class="tableCell tableHeader" style="width:100px">Item Key</div>
                <div class="tableCell tableHeader" style="width:200px">Name</div>
                <div class="tableCell tableHeader" style="width:150px">Price</div>
            </li>
            <li class="tableRow" ng-repeat="product in products">
                <div class="tableCell cursor" ng-click="addCart(product.ItemKey);" style="width: 100px" ng-bind="product.ItemKey"></div>
                <div class="tableCell" style="width: 200px" ng-bind="product.Name"></div>
                <div class="tableCell" style="width: 150px" ng-bind="product.Price | currency"></div>
            </li>
            

            <br />
            <br />
            <br />
            <h4>My Cart</h4>

            <li class="tableRow" ng-repeat="item in Items">
                <span>{{item.Name}}</span> &nbsp; &nbsp;<span ng-bind="item.Price | currency"></span> <input type="text" ng-model="item.Qty" />
                <button type="button" ng-click="remove($index)">Remove</button>
            </li>
            <li class="tableRow">
                Prodcuct Total: <span> {{total() | currency}}</span>
            </li>
            <li class="tableRow">
                Shipping & Handling:
                <input type="number" ng-model="shippingHandling" />

                Extended Total: {{ExtendedTotal | currency}}
            </li>


        </ol>
    </div>
</body>
</html>
